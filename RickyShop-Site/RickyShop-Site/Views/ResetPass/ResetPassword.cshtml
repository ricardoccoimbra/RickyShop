@model RickyShop_Site.Models.Utilizadores

@{
    Layout = null;
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/StyleLogin.css" rel="stylesheet" />
<div class="fundo-externo">
    <div id="fundo">
        <img src="~/Imagens/imageTeste.jpg" style="margin-top: -17%" />
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="container" style="margin-top: 5%;">
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body" style="background: linear-gradient(#a2db3b,#ffffff);">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h3 class="text-center">Altere a sua PassWord</h3>
                                <p>Agora pode alterar a sua PassWord. <br /> Use uma PassWord segura e que não se esqueça!</p>
                                <div class="panel-body">
                                    <form class="form">
                                        <fieldset>
                                            <div class="form-group">
                                                <img src="~/Imagens/ResetPassword-image.png" style="margin-bottom:20px" />
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock" aria-hidden="true"></i></span>
                                                    <input type="password" name="password" class="form-control" placeholder = "Nova Password" required />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                                    <input type="password" name="confirmarpassword" class="form-control" placeholder = "Confirma Nova Password" required />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-lg btn-primary btn-success" value="Validar" type="submit">
                                            </div>
                                            <div class="form-group" style="margin-right:100%">
                                                @Html.ActionLink("Voltar", "Login", "Home")
                                            </div>
                                        </fieldset>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
