@model RickyShop_Site.Models.Token

@{
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/StyleLogin.css" rel="stylesheet" />
<div class="fundo-externo">
    <div id="fundo">
        <img src="~/Imagens/imageTeste.jpg" style="margin-top: -17%" />
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr>
    <div class="container">
        <div class="row">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-body" style="background: linear-gradient(#a2db3b,#ffffff);">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h3 class="text-center">TOKEN</h3>
                                <p>Valida o token recebido para proceder para a alteração da PassWord.</p>
                                <div class="panel-body">
                                    <form class="form">
                                        <fieldset>
                                            <div class="form-group">
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk"></i></span>
                                                    @Html.EditorFor(model => model.TokenAleatorio, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Token", autofocus = true } })
                                                    @Html.ValidationMessageFor(model => model.TokenAleatorio, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input class="btn btn-lg btn-primary btn-success" value="Seguinte" type="submit">
                                            </div>
                                            <div class="form-group" style="margin-right:100%">
                                                @Html.ActionLink("Voltar", "Login", "Home")
                                            </div>
                                        </fieldset>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}