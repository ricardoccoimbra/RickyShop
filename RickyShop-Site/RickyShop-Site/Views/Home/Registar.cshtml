@model RickyShop_Site.Models.Utilizadores

@{
    Layout = null;
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link href="~/Content/StyleRegistar.css" rel="stylesheet" />
<script src="~/Scripts/jquery-ui-1.13.2.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<!------ Include the above in your HEAD tag ---------->

<link href="~/Content/StyleLogin.css" rel="stylesheet" />

<div class="fundo-externo">
    <div id="fundo">
        <img src="~/Imagens/imageTeste.jpg" style="margin-top: -17%" ; />
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">

        <div class="col-lg-12 well" style="background: linear-gradient(#a2db3b,#ffffff);">
            <h1 style="text-align: center;">Registar Conta - RickyShop</h1>
            <br />

            <div class="row">
                <form>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Primeiro Nome</label><label style="color:red">*</label>
                                @Html.EditorFor(model => model.PrimeiroNome, new { htmlAttributes = new { @class = "form-control", placeholder = "Primeiro Nome" } }) 
                                @Html.ValidationMessageFor(model => model.PrimeiroNome, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Segundo Nome</label><label style="color:red">*</label>
                                @Html.EditorFor(model => model.SegundoNome, new { htmlAttributes = new { @class = "form-control", placeholder = "Apelido" } })
                                @Html.ValidationMessageFor(model => model.SegundoNome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Contacto</label><label style="color:red">*</label>
                            @Html.EditorFor(model => model.Contacto, new { htmlAttributes = new { @class = "form-control", placeholder = "Contacto" } })
                            @Html.ValidationMessageFor(model => model.Contacto, "", new { @class = "text-danger" })
                        </div>
                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>Email</label><label style="color:red">*</label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>PassWord</label><label style="color:red">*</label>
                                @Html.EditorFor(model => model.PassWord, new { htmlAttributes = new { @class = "form-control", placeholder = "PassWord", type = "password" } })
                                @Html.ValidationMessageFor(model => model.PassWord, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6 form-group">
                                <label>NIF</label><label style="color:red">*</label>
                                @Html.EditorFor(model => model.NIF, new { htmlAttributes = new { @class = "form-control", placeholder = "NIF" } })
                                @Html.ValidationMessageFor(model => model.NIF, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6 form-group">
                                <label>Data de Nascimento</label><label style="color:red">*</label>
                                <input type="text" class="form-control datepicker" id="DataNascimento" name="DataNascimento" readonly="readonly" />
                                @Html.ValidationMessageFor(model => model.DataDeNascimento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <button type="submit" class="btn btn-lg btn-success">Criar</button>
                        <div class="form-group">
                            @Html.ActionLink("Voltar", "Login")
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


}

<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: "-100:+0"
        })
    });
</script>