                <h3 class="modal-title" id="lineModalLabel">Dados de Envio do Pedido</h3>
            </div>
            <div class="modal-body">
                <!-- content goes here -->
                <form method="post" enctype="multipart/form-data" action="~/Admin/AddImagem/">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Imagem do Produto</label>
                            <input type="file" name="file" required />
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-success center-block">Adicionar</button>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>



@*Gráficos*@
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("ChartProdutoMaisVendido", "Admin")',
            method: 'GET',
            success: function (data) {
                var ctx = document.getElementById('ChartUserGastador').getContext('2d');
                new Chart(ctx, {
                    type: 'pie',
                    data: data,
                    options: {
                        responsive: true,
                    }
                });
            }
        });
    });
</script>
