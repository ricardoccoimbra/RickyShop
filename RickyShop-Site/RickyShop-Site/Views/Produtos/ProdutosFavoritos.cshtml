@model  List<RickyShop_Site.Models.DadosProdutosFavoritos_Result>

<link href="~/Content/Shop.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/StyleListaProdutos.css" rel="stylesheet" />
<link href="~/Content/StyleButtonToTop.css" rel="stylesheet">
@if (Model.Count() != 0)
{
    <div class="container" style="margin-top:5%">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" style="width: 260px;">
                        <div class="pro-img-box">
                            <img src="@item.ImagemPath" style="height:280px;width: 250px;">
                        </div>
                        <div class="caption">
                            <h5><b>@item.Nome</b></h5>
                            <p>@item.Descrição</p>

                            <button class="btn btn-dark btn-rounded mr-1" data - toggle="tooltip" title="Ver Produto" onclick="location.href = '@Url.Action("ProdutoDetalhado", "Produtos", new { @id = item.ID_Produto })'">
                                <i class="glyphicon glyphicon-search">
                                </i>
                            </button>
                            <button class="btn btn-dark btn-rounded mr-1" data - toggle="tooltip" title="Remover dos Favoritos" style="background-color:#ce2e2e; color:white" onclick="location.href = '@Url.Action("ApagarProdFavorito", "Produtos", new { @idProd = item.ID_Produto })'">
                                <i class="glyphicon glyphicon-trash">
                                </i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <p class="alert-danger text-center" style="font-size:40px; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; border-radius:15px; margin-top:3%">
        <b>UPS, NÃO TEM NENHUM PRODUTO NOS FAVORITOS</b>
    </p>
}