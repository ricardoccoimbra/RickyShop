@using PagedList.Mvc;
@model  PagedList.PagedList<RickyShop_Site.Models.Produto>
@{
    RickyShop_Site.Models.GestãoRickyShopEntities db = new RickyShop_Site.Models.GestãoRickyShopEntities();
    int cntAux = 0;
}

<link href="~/Content/Shop.css" rel="stylesheet" />
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Content/StyleListaProdutos.css" rel="stylesheet" />
<link href="~/Content/StyleButtonToTop.css" rel="stylesheet" />

@if (cntAux == 0)
{
    <div class="col-md-3">
        <form role="form">
            <section class="panel">
                <header class="panel-heading">
                    Pesquisar
                </header>
                <div class="panel-body">
                    @Html.TextBox("SearchString")
                    <input type="submit" value="Procurar" class="btn btn-success" style="margin-top:5px" />
                </div>
            </section>
        </form>


        <section class="panel">
            <header class="panel-heading">
                Marcas
            </header>
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.DropDownListFor(model => model.FirstOrDefault().ID_Marca, new SelectList(db.MarcaProduto, "ID_Marca", "Marca"), "Marca", new { id = "cat_pedido" })
                        @* @Html.DropDownListFor(model => model.FirstOrDefault().ID_Marca, new SelectList(db.MarcaProduto, "ID_Marca", "Marca"), "Marca", new { id = "cat_pedido" })*@
                    </div>

                    <input type="submit" value="Filtrar" class="btn btn-success"> @Html.ActionLink("Limpar Filtro", "LimparFiltro", "Produtos")
                }


            </div>
        </section>


        <section class="panel">
            <header class="panel-heading">
                Preços
            </header>
            <div class="panel-body">
                <div style="display:flex; width: 10px">
                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="Preços Creceste" style="background-color: gray; color: white" onclick="location.href = '@Url.Action("OrdemPrecos", "Produtos", new { tipo = "PrecoCres" })'">
                        <i class="glyphicon glyphicon-arrow-up"></i>
                    </button>

                    <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="Preços Decrecentes" style="background-color:gray; color:white; margin-left:5px" onclick="location.href = '@Url.Action("OrdemPrecos", "Produtos", new { tipo = "PrecoDesc" })'">
                        <i class="glyphicon glyphicon-arrow-down"></i>
                    </button>
                </div>

                <br />

                <input type="checkbox" name="CheckBoxValue" value="true" /> <label style="font-size: 15px; color: #195712;"> Promoções </label>

            </div>
        </section>
    </div>
    cntAux++;
}
<div class="col-md-9">
    <div class="row product-list">

        @foreach (var item in Model)
        {

            <div class="col-md-4">
                <section class="panel">
                    <div class="pro-img-box">
                        <img src="@Html.DisplayFor(modelItem => item.ImagemPath)" />
                    </div>

                    <div class="panel-body text-center">
                        <h4>
                            <a class="pro-title">
                                @Html.DisplayFor(modelItem => item.Nome)
                            </a>
                        </h4>
                        @if (item.Desconto == null)
                        {
                            <p class="price" style="color:#195712">@Html.DisplayFor(modelItem => item.PreçoPorQuantidade)€</p>
                        }
                        else
                        {

                            <div style="display: flex" class="text-center">
                                <div style="text-decoration: line-through; margin-left: 50px; margin-right: 5px;"> @Html.DisplayFor(model => item.PreçoPorQuantidade)€</div>
                                <p class="price" style="color:#195712; ">
                                    @{
                                        double valDesconto = Convert.ToDouble(item.PreçoPorQuantidade * item.Desconto) / 100;
                                        string preco = (Convert.ToDouble(item.PreçoPorQuantidade) - valDesconto).ToString("N2") + "€";

                                        @Html.DisplayFor(model => preco);
                                        <small class="text-success">(-@Html.DisplayFor(model => item.Desconto)%)</small>
                                    }

                            </div>
                        }


                        <p style="margin-left:5px">
                            <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="Ver Produto" onclick="location.href = '@Url.Action("ProdutoDetalhado", "Produtos", new { @id = item.ID_Produto })'">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            @if (Session["UserID"] != null)
                            {
                                <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="Adicionar ao Carrinho" style="background-color: #195712; color: white">
                                    <i class="glyphicon glyphicon-shopping-cart"></i>
                                </button>
                                <button class="btn btn-dark btn-rounded mr-1" data-toggle="tooltip" title="Adicionar aos Favoritos" style="background-color:#ce2e2e; color:white">
                                    <i class="glyphicon glyphicon-heart"></i>
                                </button>
                            }
                        </p>
                    </div>
                </section>
            </div>
        }
    </div>

    @*<a href="#" class="btn-fixed" >Voltar ao Topo</a>*@


    <a class="btn-fixed" style="display: inline; color:white" href="#top">
        <span>
            <i class="glyphicon glyphicon-arrow-up"></i>
        </span>
    </a>

</div>



Página @Model.PageNumber de @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("ListaProdutos", new { pagina = page }))


<script>
    const botao = document.querySelector(".btn-fixed");
    window.addEventListener("scroll", function (event) {
        if (window.scrollY == 0) {
            botao.classList.remove("visible");
        }
        else {
            botao.classList.add("visible");
        }
    });
</script>
